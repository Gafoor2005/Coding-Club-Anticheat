<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Coding_Club_Anticheat.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Coding_Club_Anticheat"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Spacing="32" Margin="40" MaxWidth="800" HorizontalAlignment="Center">
            
            <!-- Header Section -->
            <StackPanel Spacing="16" HorizontalAlignment="Center">
                <TextBlock Text="Welcome to Coding Club Anticheat!" 
                           FontSize="32" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"/>
                <TextBlock Text="The Coding Club at SRGEC has developed this anti-cheat application to foster a fair and competitive test environment. By actively monitoring contestant activity and implementing robust plagiarism checks, we uphold the integrity of our coding contests and ensure equal opportunities for all participants." 
                           FontSize="16" 
                           TextWrapping="Wrap" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           MaxWidth="600"/>
            </StackPanel>

            <!-- Student Test Section -->
            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                    CornerRadius="12" 
                    Padding="32"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1">
                <StackPanel Spacing="24" HorizontalAlignment="Center">
                    <StackPanel Spacing="8" HorizontalAlignment="Center">
                        <TextBlock Text="🎓 Student Test Mode" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Enter your 4-digit test code to begin the secure testing environment." 
                                   TextWrapping="Wrap" 
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"/>
                    </StackPanel>
                    
                    <StackPanel Spacing="20">
                        <!-- Test Code Input -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Spacing="8">
                            <TextBox x:Name="Digit1" 
                                     Width="56" 
                                     Height="64" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     MaxLength="1" 
                                     TextAlignment="Center" 
                                     TextChanged="Digit_TextChanged" 
                                     KeyDown="Digit_KeyDown" 
                                     BeforeTextChanging="Digit_BeforeTextChanging" 
                                     Padding="0,12,0,8" 
                                     CornerRadius="8"/>
                            <TextBox x:Name="Digit2" 
                                     Width="56" 
                                     Height="64" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     MaxLength="1" 
                                     TextAlignment="Center" 
                                     TextChanged="Digit_TextChanged" 
                                     KeyDown="Digit_KeyDown" 
                                     BeforeTextChanging="Digit_BeforeTextChanging" 
                                     Padding="0,12,0,8" 
                                     CornerRadius="8"/>
                            <TextBox x:Name="Digit3" 
                                     Width="56" 
                                     Height="64" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     MaxLength="1" 
                                     TextAlignment="Center" 
                                     TextChanged="Digit_TextChanged" 
                                     KeyDown="Digit_KeyDown" 
                                     BeforeTextChanging="Digit_BeforeTextChanging" 
                                     Padding="0,12,0,8" 
                                     CornerRadius="8"/>
                            <TextBox x:Name="Digit4" 
                                     Width="56" 
                                     Height="64" 
                                     FontSize="28" 
                                     FontWeight="Bold"
                                     MaxLength="1" 
                                     TextAlignment="Center" 
                                     TextChanged="Digit_TextChanged" 
                                     KeyDown="Digit_KeyDown" 
                                     BeforeTextChanging="Digit_BeforeTextChanging" 
                                     Padding="0,12,0,8" 
                                     CornerRadius="8"/>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" 
                                    HorizontalAlignment="Center" 
                                    Spacing="16">
                            <Button x:Name="ClearButton" 
                                    Content="Clear" 
                                    Width="100" 
                                    Height="40" 
                                    Click="ClearButton_Click"
                                    Style="{StaticResource DefaultButtonStyle}"
                                    CornerRadius="8"/>
                            
                            <Button x:Name="StartTestButton" 
                                    Content="Start Test" 
                                    Width="120" 
                                    Height="40" 
                                    Click="StartTestButton_Click"
                                    Style="{StaticResource AccentButtonStyle}"
                                    CornerRadius="8"
                                    IsEnabled="False"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Information Cards -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Security Features Card -->
                <Border Grid.Column="0"
                        Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}" 
                        CornerRadius="12" 
                        Padding="24"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="🛡️ Security Features" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"/>
                            <Rectangle Height="2" 
                                       Fill="{ThemeResource AccentFillColorDefaultBrush}" 
                                       HorizontalAlignment="Left" 
                                       Width="40"
                                       RadiusX="1" 
                                       RadiusY="1"/>
                        </StackPanel>
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🚫" FontSize="14"/>
                                <TextBlock Text="Tab switching blocked" 
                                           FontSize="14" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🔒" FontSize="14"/>
                                <TextBlock Text="Copy/paste disabled" 
                                           FontSize="14" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🖱️" FontSize="14"/>
                                <TextBlock Text="Right-click prevented" 
                                           FontSize="14" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <TextBlock Text="🔧" FontSize="14"/>
                                <TextBlock Text="Developer tools blocked" 
                                           FontSize="14" 
                                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Zero Tolerance Card -->
                <Border Grid.Column="2"
                        Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}" 
                        CornerRadius="12" 
                        Padding="24"
                        BorderBrush="{ThemeResource SystemFillColorCriticalBrush}"
                        BorderThickness="1">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="⚠️ Zero Tolerance" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            <Rectangle Height="2" 
                                       Fill="{ThemeResource SystemFillColorCriticalBrush}" 
                                       HorizontalAlignment="Left" 
                                       Width="40"
                                       RadiusX="1" 
                                       RadiusY="1"/>
                        </StackPanel>
                        <StackPanel Spacing="12">
                            <TextBlock Text="ANY violation = instant termination" 
                                       FontSize="14" 
                                       FontWeight="Medium"
                                       Foreground="{ThemeResource SystemFillColorCriticalBrush}"/>
                            <TextBlock Text="No warnings • No second chances • One opportunity only" 
                                       FontSize="12" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>

        </StackPanel>
    </ScrollViewer>
</Page>